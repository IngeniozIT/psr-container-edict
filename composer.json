{
    "name": "ingenioz-it/edict",
    "type": "library",
    "description": "A slim, PSR 11, framework-agnostic DI container",
    "keywords": ["PSR-11", "DI", "Container", "IoC"],
    "homepage": "https://github.com/IngeniozIT/psr-container-edict",
    "license": "MIT",
    "authors": [
        {
            "name": "IngeniozIT",
            "email": "contact@ingenioz.it"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phan/phan": "^5.3",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.3",
        "infection/infection": "^0",
        "vimeo/psalm": "^4.18"
    },
    "provide": {
        "psr/container-implementation": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "IngeniozIT\\Edict\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "IngeniozIT\\Edict\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "testdox": "@test --testdox",
        "coverage:xml": "@test --coverage-clover tmp/coverage.xml",
        "coverage:html": "@test --coverage-html tmp/",
        "quality:tests": "XDEBUG_MODE=coverage vendor/bin/infection",
        "quality:code": "vendor/bin/phpcs && vendor/bin/phpstan analyze && vendor/bin/psalm --show-info=true && vendor/bin/phan --allow-polyfill-parser --no-progress-bar",
        "fulltest": [
            "@coverage:xml",
            "@quality:tests",
            "@quality:code"
        ]
    }
}
